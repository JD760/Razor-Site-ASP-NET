@page
@model RazorPagesMovie.Pages.Movies.IndexModel

@{
    ViewData["Title"] = "Index";
}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <style>
            #MovieDbBody {
                background-color: #35363A;
            }
            .whitetext 
            {
                color: #EEEEEE;
            }
            .backgroundGrey 
            {
                background-color: dimgrey
            }
        </style>
    </head>

    <body id="MovieDbBody" class="whitetext">
        <h1>Index</h1>

        <p>
            <a asp-page="Create">Create New</a>
        </p>

        <form>
            <p>
                <select asp-for="MovieGenre" asp-items="Model.Genres" class="backgroundGrey"> <!-- Search by movie genre-->
                    <option value="">All</option>
                </select>

                Title: <input type="text" asp-for="SearchString" class="backgroundGrey"/> <!-- Search by movie Name-->
                <input type="submit" value="Search" class="backgroundGrey" />
            </p>
        </form>


        <table class="table">
            <thead class="whitetext">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Movie[0].Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Movie[0].ReleaseDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Movie[0].Genre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Movie[0].Price)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model.Movie) {
                <tr class="whitetext">
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReleaseDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Genre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                    </td>
                </tr>
        }
            </tbody>
        </table>
    </body>
</html>